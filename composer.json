{
  "name": "mmasiukevich/service-bus",
  "description": "PHP Service Bus (publish-subscribe pattern)",
  "type": "library",
  "keywords": ["cqrs", "event-sourcing", "async-php", "command-bus", "messaging"],
  "authors": [
    {
      "name": "Masiukevich Maksim",
      "email": "dev@async-php.com",
      "homepage": "https://github.com/mmasiukevich",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ServiceBus\\": "src/"
    },
    "files": [
      "src/Application/DependencyInjection/Compiler/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ServiceBus\\Tests\\": "tests/"
    },
    "files": [
      "src/Application/DependencyInjection/Compiler/functions.php",
      "tests/functions.php"
    ]
  },
  "require": {
    "php": ">=7.2",

    "php-service-bus/common": "dev-master",
    "php-service-bus/message-serializer": "dev-master",
    "php-service-bus/annotations-reader": "dev-master",

    "symfony/dependency-injection": "^v4.2",
    "symfony/config": "^v4.2",
    "symfony/dotenv": "^v4.2",
    "symfony/yaml": "^v4.2",
    "symfony/validator": "^v4.2",
    "symfony/debug": "^v4.2",

    "amphp/log": "^1",
    "amphp/file": "^0.3",
    "amphp/artax": "^3.0",
    "amphp/parallel": "^1",
    "kelunik/retry": "^v1.0"
  },
  "require-dev": {
    "php-service-bus/module-phpinnacle-transport": "dev-master",
    "kelunik/loop-block": "^1.0",
    "phpunit/phpunit": "^7",
    "vimeo/psalm": "^3"
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "scripts": {
    "psalm": "./vendor/bin/psalm --config=psalm.xml",
    "phpunit": "./vendor/bin/phpunit --configuration phpunit.xml --verbose",
    "coverage": "./vendor/bin/phpunit --configuration phpunit.xml --coverage-html ./coverage --verbose",
    "test": [
      "@phpunit"
    ]
  },
  "config": {
    "optimize-autoloader": true
  }
}
