<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Message serializer -->
        <service id="kernel.serializer.messages" class="Desperado\MessageSerializer\MessageSerializer" public="true">
            <argument type="service" id="kernel.infrastructure.serializer_bridge"/>
        </service>

        <!-- Compressed message serializer -->
        <service id="kernel.serializer.compressed_messages" class="Desperado\MessageSerializer\CompressMessageSerializer"
                 public="true">
            <argument type="service" id="kernel.infrastructure.serializer_bridge"/>
        </service>

    </services>
</container>
