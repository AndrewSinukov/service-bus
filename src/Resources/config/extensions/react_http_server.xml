<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Http server react php backend -->
        <service id="service_bus.http_server.backend.react"
                 class="Desperado\ServiceBus\HttpServer\ReactHttpServerBackend"
                 public="false">
            <argument/>
            <argument type="service" id="service_bus.logger"/>

            <tag name="service_bus.logger" channel="http"/>
        </service>
    </services>
</container>
